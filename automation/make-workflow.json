{
  "name": "Norwich Event Hub - Event Submission Workflow",
  "description": "Automated workflow for processing event submissions",
  "scenarios": [
    {
      "name": "Event Submission Processing",
      "steps": [
        {
          "module": "webhook",
          "action": "catch_webhook",
          "description": "Receive event submission from website form"
        },
        {
          "module": "googlesheets",
          "action": "add_row",
          "description": "Add event to Google Sheets (Event Submissions sheet)"
        },
        {
          "module": "email",
          "action": "send_email",
          "description": "Send confirmation email to promoter",
          "to": "{{promoterEmail}}",
          "subject": "Event Submission Received - Norwich Event Hub",
          "from": "submit@norwicheventshub.com"
        },
        {
          "module": "googlesheets",
          "action": "add_row",
          "description": "Log submission in admin sheet for review"
        }
      ]
    },
    {
      "name": "Event Approval Workflow",
      "steps": [
        {
          "module": "googlesheets",
          "action": "watch_rows",
          "description": "Monitor Google Sheets for status changes to 'Approved'"
        },
        {
          "module": "canva",
          "action": "create_design",
          "description": "Generate social media graphic for event",
          "template": "event_post_template"
        },
        {
          "module": "instagram",
          "action": "create_media",
          "description": "Post to Instagram",
          "caption": "{{eventDescription}} #NorwichEvents #Norwich"
        },
        {
          "module": "facebook",
          "action": "create_post",
          "description": "Post to Facebook Page"
        },
        {
          "module": "twitter",
          "action": "create_tweet",
          "description": "Post to Twitter/X"
        },
        {
          "module": "email",
          "action": "send_email",
          "description": "Send approval notification to promoter"
        }
      ]
    },
    {
      "name": "Daily Event Roundup",
      "steps": [
        {
          "module": "schedule",
          "action": "schedule",
          "description": "Run daily at 9 AM"
        },
        {
          "module": "googlesheets",
          "action": "get_rows",
          "description": "Get events happening today"
        },
        {
          "module": "canva",
          "action": "create_design",
          "description": "Create 'What's On Today' graphic"
        },
        {
          "module": "instagram",
          "action": "create_story",
          "description": "Post Instagram Story with today's events"
        },
        {
          "module": "facebook",
          "action": "create_post",
          "description": "Post daily roundup to Facebook"
        }
      ]
    },
    {
      "name": "Weekly Event Roundup",
      "steps": [
        {
          "module": "schedule",
          "action": "schedule",
          "description": "Run every Monday at 10 AM"
        },
        {
          "module": "googlesheets",
          "action": "get_rows",
          "description": "Get events for the upcoming week"
        },
        {
          "module": "canva",
          "action": "create_design",
          "description": "Create 'This Week in Norwich' graphic"
        },
        {
          "module": "instagram",
          "action": "create_media",
          "description": "Post weekly roundup to Instagram"
        },
        {
          "module": "email",
          "action": "send_email",
          "description": "Send weekly newsletter to subscribers"
        }
      ]
    }
  ],
  "notes": [
    "Set up Make.com account and connect all required apps",
    "Create Canva templates for event posts and roundups",
    "Configure social media API access tokens",
    "Set up Google Sheets with proper column structure",
    "Test workflows with sample data before going live"
  ]
}

