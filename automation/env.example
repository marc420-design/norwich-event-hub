# AI Event Aggregator - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: AI API Key (Choose ONE)
# =============================================================================

# Option 1: Google Gemini (RECOMMENDED - FREE TIER!)
# Get your free key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Option 2: OpenAI (Alternative - Paid)
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# REQUIRED: Google Sheets Configuration
# =============================================================================

# Your Google Sheet ID (from the sheet URL)
GOOGLE_SHEET_ID=1wdh2VOlZ8gp0hwFpFV6cVpDDmaMxGs48eCDqoFFZTcU

# Path to your Google Service Account JSON file
GOOGLE_SHEETS_CREDENTIALS=./google-credentials.json

# =============================================================================
# OPTIONAL: Event Source API Keys
# =============================================================================

# Eventbrite API Token (optional)
# EVENTBRITE_API_KEY=your_eventbrite_token_here

# Facebook Graph API Token (optional)
# FACEBOOK_ACCESS_TOKEN=your_facebook_token_here

# =============================================================================
# CONFIGURATION: Scraping Behavior
# =============================================================================

# How many days ahead to scrape events (default: 90)
SCRAPE_DAYS_AHEAD=90

# Minimum quality score to keep events (0-100, default: 50)
MIN_QUALITY_SCORE=50

# Quality threshold for auto-approval (0-100, default: 80)
AUTO_APPROVE_THRESHOLD=80

# Maximum radius from Norwich city center in kilometers (default: 15)
NORWICH_RADIUS_KM=15

